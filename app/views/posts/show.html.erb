
<div class="row post-background">
  <div class="col m12">
    <div class="col m6">
      <h1><%= @post.title %></h1>
    </div>
    <div class="col m6">
      <div class="col m10">
        <h4 class="post-author">by <%= @post.user.first_name%> <%= @post.user.last_name%></h4>
      </div>
      <div class="col m2">
        <%= image_tag @post.user.photo, class: "userphoto-small" %>
      </div>
    </div>
  </div>
  <hr>
  <div class="col m12">
    <p><%= @post.content %></p>
    <% if @user == current_user then %>
      <%= link_to edit_city_post_path(@city), :class => 'btn-floating halfway-fab waves-effect waves-light red right edit-circle' do %>
        <i class="material-icons">mode_edit</i>
      <% end %>
    <% end %>
  </div>
</div>

