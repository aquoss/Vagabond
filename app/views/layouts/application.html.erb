<!DOCTYPE html>
<html>
  <head>
    <title>Postcard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar-fixed">
      <ul id="dropdown1" class="dropdown-content">



        <li><%= link_to "San Francisco", city_path(1) %></li>
        <li><%= link_to "London", city_path(2) %></li>
        <li><%= link_to "Gibraltar", city_path(3) %></li>
        <li><%= link_to "Tokyo", city_path(4) %></li>
        <li><%= link_to "Hong Kong", city_path(5) %></li>
        <li><%= link_to "Sydney", city_path(6) %></li>
        <li><%= link_to "Paris", city_path(7) %></li>
        <li><%= link_to "Reykjavik", city_path(8) %></li>
      </ul>
      <nav>
        <div class="nav-wrapper">
          <%= link_to "Postcards", root_path, class: "brand-logo logo center" %>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Cities<i class="material-icons right">arrow_drop_down</i></a></li>
            <% if current_user %>
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li><%= link_to "Log Out", logout_path %></li>
            <% else %>
              <li><%= link_to "Create Account", new_user_path %></li>
              <li><%= link_to "Log In", login_path %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>

    <% flash.each do |name,msg| %>
      <script type="text/javascript">
        Materialize.toast('<%= msg %>', 4000)
      </script>
    <% end %>

    <div>
      <%= yield %>
    </div>
    <script type="text/javascript">
      $( document ).ready(function(){
        $(".dropdown-button").dropdown();
        $('.carousel.carousel-slider').carousel({fullWidth: true});
      });
    </script>
  </body>
</html>
